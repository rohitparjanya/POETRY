<div id="each-post">
    <li>
        <p>
            <% if (locals.user && locals.user.id == post.user.id){ %>
            <small>
                <a href="/posts/destroy/<%= post.id %>" ><i class="fas fa-window-close"></i></a>
            </small>
            <% } %>
            <%= post.content %>
            <small>
                - <%= post.user.name %>
            </small>
        </p>
        <div class="post-comments">
            <% if (locals.user){ %>
                <form action="/comments/create" method="POST">
                    <input class="comment-textbox" type="text" name="content" placeholder="Type Here to add comment..." required>
                    <input type="hidden" name="post" value="<%= post._id %>" >
                    <input class="comment-textbox" type="submit" value="Add Comment">
                </form>

            <% } %>
        </div>
            <div class="post-comments-list">
                <span> <i class="fas fa-comments"></i> :</i></span>
                <ul id="post-comments-<%= post._id %>">
                    <% for (comment of post.comments){%>
                     <%- include('_comment') -%>
                    <%} %>
                </ul>
            </div>
        
        
    </li>



</div>
